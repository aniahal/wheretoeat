<div class="container">
  <div class="row" style="background-color: #f4b042;">
    <div class="col">
      Find a restaurant:
    </div>
    <div class="col">
    <%= form_tag search_path, method: :get do %>
      <div class="input-group">
        <%= text_field_tag :q, "", class: "form-control" %>
        <span class="input-group-btn">
          <%= submit_tag "Search", class: "btn btn-default" %>
        </span>
      </div>
    <% end %>
    </div>
  </div>
  <div class="row" style="background-color: #ffd99e;">
      <% restaurants.each do |restaurant| %>
        <div class="col-4" ><br>
          <div class="card text-white bg-warning mb-3">
              <% if restaurant.image.attachment.present? %>
              <%= image_tag restaurant.image, class: 'img-fluid' %>
              <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= restaurant.name %></h5>
              <p class="card-text"><%= restaurant.street %> <%= restaurant.city.name %></p>
            </div>
            <div class="card-footer">
              <p><%= link_to 'Show', restaurant_path(restaurant), class: 'badge badge-light' %></p>
            </div>
          </div>
        </div>
      <% end %>
  </div>