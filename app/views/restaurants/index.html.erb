<h1>Listing restaurants</h1>

<div class="container">
  <div class="row" style="background-color: #f4b042;">
    <div class="col">
      Find a restaurant:
    </div>
    <div class="col">
    <%= form_tag restaurants_path, method: :get do %>
      <div class="input-group">
        <%= text_field_tag :q, "", class: "form-control" %>
        <span class="input-group-btn">
          <%= submit_tag "Search", class: "btn btn-default" %>
        </span>
      </div>
    <% end %>
    </div>
  </div>
  <div class="row" style="background-color: #ffd99e;">
    <div class="col">
      <div class="container">
        <div class="row">
            <ul class="list-unstyled">
              <% @restaurants.each do |restaurant| %>
                <li class="media">
                        <img class="align-self-center mr-3" src="data:image/svg+xml;base64," alt="..." class="rounded-circle">
                    <div class="media-body">
                        <h5 class="mt-0 mb-1"><%= restaurant.name %></h5>
                        <p><%= restaurant.street %></p>
                        <p><%= restaurant.city.name %></p>
                        <p><%= link_to 'Show', restaurant_path(restaurant) %></p>
                      <% end %>
                    </div>
                </li>
            </ul> 
      </div>
    </div>
  </div>
    <div class="col-4" style="background-color: #f4b042;">
      Blablablabla
    </div>
  </div>
</div>

<p>
<%= link_to 'Add new restaurant', new_restaurant_path, class: 'btn btn-secondary' %> 
</p>